COMPILER grammarLL1

/*-------------------------------------------------------------------------*/

CHARACTERS
  tab           = '\u0009'. /*  9 = tabulator */
  lf            = '\u000a'. /* 10 = line feed */

  digit         = "0123456789".
  letter        = 'A' .. 'Z' + 'a' .. 'z'.

TOKENS
  ident         = letter { letter | digit }.
  number        = digit  { digit }.
  negative      = "-" digit.
  string        = "\"" { letter | digit | tab | lf } "\"".

/*------ Palavras Reservadas ------*/

and         = "and".
array       = "array".
associative = "associative".
break       = "break".
constant    = "constant".
else        = "else".
end         = "end".
export      = "export".
function    = "function".
if          = "if".
import      = "import".
not         = "not".
or          = "or".
record      = "record".
return      = "return".
while       = "while".

/*------ Operadores LÃ³gicos------*/

soma        = "+".
subtracao   = "-".
multiplicao = "*".
divisao     = "/".
disjuncao   = "|".
atribuicao  = ":=".
maior       = ">".
maiorIgual  = ">=".
diferente   = "!".
menor       = "<".
